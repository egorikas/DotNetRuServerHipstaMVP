@page
@model LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
    <body>
        <p>Login using form below:</p>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            Username: <input asp-for="TokenRequest.Email" value="email"/><br/>
            Password: <input asp-for="TokenRequest.Password" value="password"/><br/>
            <input type="submit" value="Login"/>
            @Html.AntiForgeryToken()
        </form>
    </body>
</html>